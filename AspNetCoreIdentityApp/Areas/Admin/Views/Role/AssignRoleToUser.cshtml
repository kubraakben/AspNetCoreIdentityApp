
@{
	ViewData["Title"] = "AssignRoleToUser";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<AssignRoleToUserViewModel>

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h2>Kullanıcıya Rol Atama</h2>

		<form asp-action="AssignRoleToUser" asp-route-userId ="@ViewBag.UserId" method="post">
			@for (int i = 0; i < Model.Count; i++)
			{
				<div class="mb-3 form-check">
					<input type="checkbox" class="form-check-input" asp-for="@Model[i].Exists" />
					<label class="form-check-label">@Model[i].Name</label>
					<input type="hidden" asp-for="@Model[i].Id" />
					<input type="hidden" asp-for="@Model[i].Name" />
				</div>
			}
			<div class="form-group mt-3">
				<button type="submit" class="btn btn-primary">Rol Atama</button>

		</form>
		<div class="mt-3">
			<a asp-action="Home" asp-controller="UserList">Kullanıcı Listesine Geri Dön</a>
		</div>
	</div>
</div>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


